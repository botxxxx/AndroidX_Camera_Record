<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
    </style>

    <style name="ControlCenterTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/controlCenterBackground</item>
    </style>

    <style name="TimeClock">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">320dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="DigitalClock" parent="android:Widget.TextView">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/clockTextWhite</item>
        <item name="android:translationZ">0dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">60dp</item>
    </style>

    <style name="ClockScreenStatusIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:src">@drawable/red_lock</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginTop">200dp</item>
        <item name="android:layout_marginStart">140dp</item>
    </style>

    <style name="LockScreenButton" parent="android:Widget.Button">
        <item name="android:layout_width">106dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:onClick">passwordInput</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ScrollViewBoxes" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">120dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/color_clickable_view</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:text">Scroll Block</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/scrollBlockTitleText</item>
    </style>

    <style name="ControlCenterBtn" parent="android:Widget.ImageButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="ScrollViewBoxTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/scrollBlockTitleText</item>
    </style>

    <style name="ScrollViewBoxText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:gravity">center|left</item>
    </style>

    <!-- jeff_wu@20190613, Monitoring  -->
    <style name="ScrollViewSensorTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/scrollBlockTitleText</item>
    </style>

    <!-- jeff_wu@20190613, Show information icon in analog clock -->
    <style name="AnalogClockScreenInfoIcon">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:baselineAlignBottom">false</item>
    </style>

    <!-- jeff_wu@20190613, Show information value in analog clock -->
    <style name="AnalogClockScreenInfoValue" parent="android:Widget.TextView">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- jeff_wu@20190812, sensor settings layout in activity_monitoring.xml -->
    <style name="SensorSettingsLayout" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">32sp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- jeff_wu@20190812, sensor settings TextView in activity_monitoring.xml -->
    <style name="SensorSettingsTxtView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:gravity">center|left</item>
    </style>

    <!-- jeff_wu@20190812, sensor settings EditText in activity_monitoring.xml -->
    <style name="SensorSettingsEdtView" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">9</item>
    </style>

    <!-- jeff_wu@20190905, widget on/off image button -->
    <style name="WidgetOnOffBtn" parent="android:Widget.ImageButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">#00000000</item>
    </style>

    <!-- jeff_wu@20190912, widget brightness imageview -->
    <style name="WidgetBrightnessImgView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">290dp</item>
        <item name="android:layout_toRightOf">@+id/widget_tableLyt01</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- jeff_wu@20190912, widget brightness seekbar -->
    <style name="WidgetBrightnessSeekbar" parent="android:Widget.SeekBar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">290dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:minHeight">290dp</item>
        <item name="android:maxHeight">290dp</item>
        <item name="android:thumbTint">@android:color/transparent</item>
    </style>

    <!-- jeff_wu@20190917, home 12/24 hour format -->
    <style name="DigitalClock12_24HourFormat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:format12Hour">a</item>
        <item name="android:format24Hour">A</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/clockTextWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- jeff_wu@20190917, home hour -->
    <style name="DigitalClockHour">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:translationY">-50dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:format12Hour">hh</item>
        <item name="android:format24Hour">HH</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/clockTextWhite</item>
        <item name="android:textSize">160sp</item>
    </style>

    <!-- jeff_wu@20190917, home minute -->
    <style name="DigitalClockMins">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">90dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:format12Hour">mm</item>
        <item name="android:format24Hour">mm</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/clockTextYellow</item>
        <item name="android:textSize">160sp</item>
    </style>

    <!-- jeff_wu@20190917, home date -->
    <style name="DigitalClockDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">137dp</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:format12Hour">MMM dd</item>
        <item name="android:format24Hour">MMM dd</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/clockTextYellow</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- jeff_wu@20190917, home week -->
    <style name="DigitalClockWeek">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">164dp</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:format12Hour">EE</item>
        <item name="android:format24Hour">EE</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/clockTextWhite</item>
        <item name="android:textSize">25sp</item>
    </style>
</resources>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoRecordActivity">

    <TextureView
        android:id="@+id/surfaceView0"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/cancel"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cancel"
                    android:tint="@color/green" />

                <ImageButton
                    android:id="@+id/volume_down"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/volume_down"
                    android:tint="@color/green" />

                <ImageButton
                    android:id="@+id/record"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/record"
                    android:tint="@color/green" />

                <ImageButton
                    android:id="@+id/volume_up"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/volume_up"
                    android:tint="@color/green" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:gravity="center">

                <com.askey.widget.VerticalPagerContainer
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.askey.widget.VerticalViewPager
                        android:id="@+id/pager1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.askey.widget.VerticalPagerContainer>

                <com.askey.widget.VerticalPagerContainer
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.askey.widget.VerticalViewPager
                        android:id="@+id/pager2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.askey.widget.VerticalPagerContainer>
            </TableRow>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextureView
                    android:id="@+id/surfaceView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:divider="@color/gone"
                    android:dividerHeight="0px" />
            </TableRow>

            <Button
                android:id="@+id/surfaceBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gone" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

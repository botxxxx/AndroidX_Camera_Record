<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoRecordActivity">

    <TextureView
        android:id="@+id/surfaceView0"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextureView
                    android:id="@+id/surfaceView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:divider="@color/gone"
                    android:dividerHeight="0px" />
            </TableRow>

            <Button
                android:id="@+id/surfaceBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1">

                    <com.askey.widget.VerticalPagerContainer
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.askey.widget.VerticalViewPager
                            android:id="@+id/pager1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.askey.widget.VerticalPagerContainer>

                    <RelativeLayout
                        android:id="@+id/loadingView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_green_dark" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white_gone" />
                    </RelativeLayout>
                </RelativeLayout>

                <com.askey.widget.VerticalPagerContainer
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1">

                    <com.askey.widget.VerticalViewPager
                        android:id="@+id/pager2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.askey.widget.VerticalPagerContainer>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/cancel"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_cancel"
                    android:tint="@color/orange" />

                <ImageButton
                    android:id="@+id/volume_down"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_volume_down"
                    android:tint="@color/orange" />

                <ImageButton
                    android:id="@+id/record"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_record"
                    android:tint="@color/orange" />

                <ImageButton
                    android:id="@+id/volume_up"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_volume_up"
                    android:tint="@color/orange" />

                <ImageButton
                    android:id="@+id/setting"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/orange" />
            </TableRow>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

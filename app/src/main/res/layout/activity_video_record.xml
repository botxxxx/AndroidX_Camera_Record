<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.askey.thermal.VideoRecordActivity"
    tools:ignore="Autofill,ButtonStyle,ContentDescription,HardcodedText,NestedWeights,RtlHardcoded,UselessParent,SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextureView
                    android:id="@+id/surfaceView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextureView
                    android:id="@+id/surfaceView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </TableRow>
        </RelativeLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextureView
                android:id="@+id/surfaceView0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray_light"
                android:gravity="center"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/cancel"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/gone"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_cancel"
                            android:tint="@color/orange" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/record"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/gone"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_record"
                            android:tint="@color/orange" />

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/record_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textColor="@color/black"
                                android:textSize="25dp" />
                        </RelativeLayout>
                    </RelativeLayout>

                </TableRow>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/record_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textColor="@color/black"
                        android:textSize="40dp" />
                </RelativeLayout>
            </LinearLayout>
        </TableRow>
    </LinearLayout>
</RelativeLayout>

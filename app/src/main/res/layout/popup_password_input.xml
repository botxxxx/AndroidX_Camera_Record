<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popupBackground">

    <GridLayout
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:columnCount="5"
        android:rowCount="5">

        <TextView
            android:id="@+id/popup_password_display"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:layout_columnSpan="5"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="numberPassword"
            android:text="123456"
            android:textAlignment="center"
            android:textColor="@color/popupText"
            android:textSize="60sp" />

        <Button
            android:id="@+id/popup_password_btn_1"
            style="@style/LockScreenButton"
            android:tag="1"
            android:text="1" />

        <Space android:layout_width="1dp" />

        <Button
            android:id="@+id/popup_password_btn_2"
            style="@style/LockScreenButton"
            android:tag="2"
            android:text="2" />

        <Space android:layout_width="1dp" />

        <Button
            android:id="@+id/popup_password_btn_3"
            style="@style/LockScreenButton"
            android:tag="3"
            android:text="3" />

        <Button
            android:id="@+id/popup_password_btn_4"
            style="@style/LockScreenButton"
            android:tag="4"
            android:text="4" />

        <Space android:layout_width="1dp" />

        <Button
            android:id="@+id/popup_password_btn_5"
            style="@style/LockScreenButton"
            android:tag="5"
            android:text="5" />

        <Space android:layout_width="1dp" />

        <Button
            android:id="@+id/popup_password_btn_6"
            style="@style/LockScreenButton"
            android:tag="6"
            android:text="6" />

        <Button
            android:id="@+id/popup_password_btn_7"
            style="@style/LockScreenButton"
            android:tag="7"
            android:text="7" />

        <Space android:layout_width="1dp" />

        <Button
            android:id="@+id/popup_password_btn_8"
            style="@style/LockScreenButton"
            android:tag="8"
            android:text="8" />

        <Space android:layout_width="1dp" />

        <Button
            android:id="@+id/popup_password_btn_9"
            style="@style/LockScreenButton"
            android:tag="9"
            android:text="9" />

        <Button
            android:id="@+id/popup_password_btn_x"
            style="@style/LockScreenButton"
            android:tag="-2"
            android:text="X" />

        <Space android:layout_width="1dp" />

        <Button
            android:id="@+id/popup_password_btn_0"
            style="@style/LockScreenButton"
            android:tag="0"
            android:text="0" />

        <Space android:layout_width="1dp" />

        <ImageButton
            android:id="@+id/popup_password_btn_backspace"
            android:layout_width="106dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:src="@drawable/delete"
            android:tag="-1" />

    </GridLayout>

</RelativeLayout>

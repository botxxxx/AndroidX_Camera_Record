<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/notify_list_item_height"
    android:background="@drawable/notify_list_item_backgroung"
    android:orientation="vertical">

    <!--
    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="@dimen/list_image_width"
        android:layout_height="@dimen/list_image_height"
        android:padding="@dimen/list_image_padding"/>
    -->
    <TextView
        android:id="@+id/line1_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/notify_line1_text_height"
        android:layout_marginLeft="@dimen/notify_text_margin_left"
        android:layout_marginTop="@dimen/notify_text_margin_top"
        android:layout_marginRight="@dimen/notify_text_margin_right"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:textSize="@dimen/notify_line1_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/line2_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/notify_line2_text_height"
        android:layout_marginLeft="@dimen/notify_text_margin_left"
        android:layout_marginRight="@dimen/notify_text_margin_right"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:textSize="@dimen/notify_line2_text_size" />

    <TextView
        android:id="@+id/line3_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/notify_line3_text_height"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/notify_text_margin_left"
        android:layout_marginRight="@dimen/notify_text_margin_right"
        android:layout_marginBottom="@dimen/notify_text_margin_bottom"
        android:maxLines="1"
        android:textColor="#ff55ff"
        android:textSize="@dimen/notify_line3_text_size" />
</LinearLayout>
